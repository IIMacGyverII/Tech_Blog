		</div>
		<div class="column is-9">
			<div class="box content boxShadow">
				<article class="post">
					{{#each posts as |post|}}
					<h4 class="textShadow1px"><a href="/post/{{post.id}}">{{post.title}}</a></h4>
					<div class="media postBox">
						<div class="media-left">
							<p class="image is-32x32">
								<img src="http://bulma.io/images/placeholders/128x128.png">
							</p>
						</div>
						<div class="media-content">
							<div class="content">
								<p>
									<a class="textShadow1px" href="#">{{user.username}}</a> {{format_date post.date_created}} &nbsp;
									<span class="tag is-primary boxShadow">Post</span>
								</p>
								<h7 class="textShadow1px">{{post.content}}
								</h7>
							</div>
						</div>
						<div class="media-right">
							<span class="has-text-grey-light"><i class="fa fa-comments"></i> 1</span>
						</div>
					</div>
					{{/each}}
				</article>
			</div>
		</div>
	</div>
</section>