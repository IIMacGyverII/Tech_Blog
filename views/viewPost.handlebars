<section class="container boxShadow borderRadius leftAndRightMargin">
  <div class="columns is-multiline">
    <div class="column is-12 register">
      <div class="columns cardMargin">
        <div class="column is-12 border cardMargin2 postContainer">
          <h3 class="title is-4 textShadow1px techBlogColor">{{title}}</h3>
          <h4 class="subtitle colorLightBlue is-5 textShadow1px">Created by {{user.username}}</h2>
            <p class="textShadow1px">{{{content}}}</p>
        </div>
      </div>
      <span class="button is-link modal-button textShadow boxShadow" id="addCommentBtn" data-id="{{id}}"
        data-target="modal-card">Add A comment</span>
    </div>
  </div>
</section>
 {{#each comments as |comment|}}
<section>
  <div class="column noPadding is-9">
    <div class="box content boxProfile">     
      <article class="post">
        <h4 class="textShadow1px"><a class="techBlogColor"></a>{{user.username}}</a></h4>
        <div class="media btnSpacing">
          <div class="media-left">
            <p class="image is-32x32">
              <img src="http://bulma.io/images/placeholders/128x128.png">
            </p>
          </div>
          <div class="media-content">
            <div class="content">
              <p>
                <a href="#">{{user.username}}</a> {{format_date comment.date_created}} &nbsp;
                <span class="tag textShadow1px">Question</span>
              </p>
              <h7 class="textShadow1px">{{comment.commentContent}}
              </h7>
            </div>
          </div>
          <div class="media-right">
            <span class="has-text-grey-light"><i class="fa fa-comments"></i> 1</span>
          </div>
        </div>
        {{!-- <div class="form-group profileBtnMargin">
          <span class="button is-danger modal-button textShadow boxShadow deletePostBtn" data-target="modal-card"
            data-id="{{post.id}}">Delete Post</span>
        </div> --}}
      </article>    
    </div>
</section>
{{/each}}

<script src="/js/viewPost.js"></script>